<div class="mlvedaform">
{% section 'product-template' %}
{% section 'product-recommendations' %}
{% if collection.previous_product or collection.next_product %}
<div class="container grid clearfix">
  <div class="twelve pagination bottompad clearfix">
    {% if collection.previous_product %}            
    <div class="{% if collection.next_product %}six{% else %}twelve{% endif %} mobile left negative-left"><span class="prev"></span>{{ collection.previous_product.title | link_to: collection.previous_product }}</div>
    {% endif %}
    {% if collection.next_product %}
    <div class="{% if collection.previous_product %}six{% else %}twelve{% endif %} mobile right negative-right">{{ collection.next_product.title | link_to: collection.next_product }}<span class="next"></span></div>
    {% endif %}
  </div>
</div>
{% endif %}
</div>